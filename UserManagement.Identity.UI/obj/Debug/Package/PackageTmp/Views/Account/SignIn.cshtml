@model UserManagementAPI.Common.Models.AuthenticateUserModel

@{
    ViewBag.Title = "Sign In";
}

<h2>Sign In</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" class="btn btn-danger" value="Sign In" />
    </div>
}

<p>Don't have an account? @Html.ActionLink("Click Here To Sign Up", "SignUp", "SignUp")</p>
<p>Forgot your password? @Html.ActionLink("Click Here", "RequestResetPasswordEmail", "Reset")</p>