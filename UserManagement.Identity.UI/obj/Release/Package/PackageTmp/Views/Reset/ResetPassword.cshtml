</script>

<h2>Reset Password</h2>

@using (Html.BeginForm("ResetPassword","Reset",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="has-error">
        @Html.ValidationSummary()
    </div>

    @Html.Hidden("EmailAddress",(string)@ViewBag.EmailAddress)
    @Html.Hidden("PasswordResetToken", (string)@ViewBag.ResetToken)
    
    <fieldset>
        <legend>Enter your new password</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", id = "" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
    </fieldset>
  
   <div class="form-group">
        <div class="">
            @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })*@
            <input type="submit" value="Reset Password" class="btn btn-danger" />
        </div>
    </div>
}
