<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Brilliant Engineering User Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script>
        //Place this plugin snippet into another file in your application
        (function ($) {
            $.toggleShowPassword = function (options) {
                var settings = $.extend({
                    field: "#password",
                    confirmField: "#confirmPassword",
                    control: "#toggle_show_password",
                }, options);

                var control = $(settings.control);
                var confirmField = $(settings.confirmField);
                var field = $(settings.field)

                control.bind('click', function () {
                    if (control.is(':checked')) {
                        field.attr('type', 'text');
                        confirmField.attr('type', 'text');
                    } else {
                        confirmField.attr('type', 'password');
                        field.attr('type', 'password');
                    }
                })
            };
        }(jQuery));
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="" href="@Url.Action("Index","Home")">
                    <img alt="Brand" class="paddingLess" src="~/Content/images/Generic-Company-Logo.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Profile")</li>
                            <li>@Html.ActionLink("View/Update Profile Information", "MyProfile", "Profile")</li>
                        </ul>
                    </li>                    
                    @{Html.RenderAction("AdministratorMenu", "Account");}
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@{Html.RenderAction("LoggedInStatus", "Account");}</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Brilliant Engineering Limited @DateTime.Now.Year - User Management System</p>
        </footer>
    </div>
</body>
</html>