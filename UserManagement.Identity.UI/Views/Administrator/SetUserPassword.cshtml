@model UserManagementAPI.Common.Models.SetPasswordModel

@{
    ViewBag.Title = "Set Password";
}

<script>
    //initialize tooltips
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>


<h2>Set Password</h2>
<h4>User Name : @Model.UserName </h4>
<hr />
@using (Html.BeginForm())
{

    

    @Html.AntiForgeryToken();

    @Html.HiddenFor(c => c.UserId)
    @Html.HiddenFor(c => c.UserName)
    
    
<div class="form-group">
    @Html.LabelFor(model => model.NewPassword)
    @Html.PasswordFor(model => model.NewPassword, new
        {
            @class = "form-control",
            @data_toggle = "tooltip",
            @data_html = "true",
            @data_placement = "right",
            @title = "Password must satisfy the following conditions:<ul>" +
                            "<li>contain at least one uppercase letter</li>" +
                            "<li>contain at least one digit</li>" +
                            "<li>should be at least eight characters long</li></ul>",
            @id = "txtPwd"
        })
    @Html.ValidationMessageFor(model => model.NewPassword)
</div>
<div class="form-group">
    @Html.Label("Confirm Password")
    @Html.PasswordFor(model => model.ConfirmPassword, new
        {
            @class = "form-control",
            @data_toggle = "tooltip",
            @data_html = "true",
            @data_placement = "right",
            @title = "Password must satisfy the following conditions:<ul>" +
                            "<li>contain at least one uppercase letter</li>" +
                            "<li>contain at least one digit</li>" +
                            "<li>should be at least eight characters long</li></ul>",
            @id = "txtConfirmPwd"
        })
    @Html.ValidationMessageFor(model => model.ConfirmPassword)
</div>
    @Html.ActionLink("Back To User", "ViewUser", new { @id = Model.UserId }, new {@class = "btn btn-default" })
    <input type="submit" value="Set User Password" class="btn btn-danger" />
}